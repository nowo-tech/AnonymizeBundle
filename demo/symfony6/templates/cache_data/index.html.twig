{% extends 'base.html.twig' %}

{% block title %}Cache Data - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Cache Data', connection: connection, routePrefix: 'cache_data', currentPage: 'List'} %}

{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Truncate Feature</strong><br>
    This entity is configured with <code>truncate: true, truncate_order: 2</code>.
    The table will be emptied before anonymization runs (after TempData).
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Cache Data <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('cache_data_new', {connection: connection}) }}" class="btn btn-primary">Create New Cache Data</a>
    </div>
    <div class="card-body">
        {% if cache_data_list|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Cache Key</th>
                            <th>Cache Value</th>
                            <th>Expires At</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cache_data in cache_data_list %}
                            <tr>
                                <td>{{ cache_data.id ?? cache_data.id }}</td>
                                <td><code>{{ cache_data.cacheKey ?? '-' }}</code></td>
                                <td><pre class="mb-0" style="max-width: 300px; white-space: pre-wrap; font-size: 0.85em;">{{ (cache_data.cacheValue ?? [])|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre></td>
                                <td>{{ cache_data.expiresAt ? cache_data.expiresAt|date('Y-m-d H:i:s') : '-' }}</td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if cache_data.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: cache_data.anonymized|default(false)} %}
                                    {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('cache_data_show', {connection: connection, id: cache_data.id ?? cache_data.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('cache_data_edit', {connection: connection, id: cache_data.id ?? cache_data.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('cache_data_delete', {connection: connection, id: cache_data.id ?? cache_data.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ (cache_data.id ?? cache_data.id)) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No cache data found. <a href="{{ path('cache_data_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
