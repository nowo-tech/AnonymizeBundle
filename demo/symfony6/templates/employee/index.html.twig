{% extends 'base.html.twig' %}

{% block title %}Employees - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Employees', connection: connection, routePrefix: 'employee', currentPage: 'List'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>firstName</strong> - Name faker</li>
        <li><strong>lastName</strong> - Surname faker</li>
        <li><strong>username</strong> - Username faker</li>
        <li><strong>email</strong> - Email faker</li>
        <li><strong>phone</strong> - Phone faker</li>
        <li><strong>birthDate</strong> - Date faker (past dates, age 18-65)</li>
        <li><strong>age</strong> - Age faker (numeric range: 22-65)</li>
        <li><strong>previousCompany</strong> - Company faker (LLC type)</li>
        <li><strong>hireDate</strong> - Date faker (past dates)</li>
    </ul>
    <strong class="mt-2 d-block">Note:</strong> This entity uses exclusion patterns (department='HR' will not be anonymized).
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Employees <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('employee_new', {connection: connection}) }}" class="btn btn-primary">Create New Employee</a>
    </div>
    <div class="card-body">
        {% if employees|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Age</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for employee in employees %}
                            <tr>
                                <td>{{ employee.id }}</td>
                                <td>{{ employee.firstName }} {{ employee.lastName }}</td>
                                <td>{{ employee.username }}</td>
                                <td>{{ employee.email }}</td>
                                <td><span class="badge bg-secondary">{{ employee.department }}</span></td>
                                <td>{{ employee.age }}</td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if employee.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: employee.anonymized|default(false)} %}
                                {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('employee_show', {connection: connection, id: employee.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('employee_edit', {connection: connection, id: employee.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('employee_delete', {connection: connection, id: employee.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No employees found. <a href="{{ path('employee_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
