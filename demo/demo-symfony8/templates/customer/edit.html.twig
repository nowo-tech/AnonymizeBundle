{% extends 'base.html.twig' %}

{% block title %}Edit Customer #{{ customer.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
<div class="card">
    <h2>Edit Customer <span class="connection-badge {{ connection }}">{{ connection }}</span></h2>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.name) }}
        {{ form_row(form.status) }}

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Customer</button>
            <a href="{{ path('customer_show', {connection: connection, id: customer.id}) }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
