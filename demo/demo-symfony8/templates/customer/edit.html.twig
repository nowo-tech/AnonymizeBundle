{% extends 'base.html.twig' %}

{% block title %}Edit Customer #{{ customer.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="mb-0">Edit Customer <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            <div class="mb-3">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.status, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Update Customer</button>
                <a href="{{ path('customer_show', {connection: connection, id: customer.id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
