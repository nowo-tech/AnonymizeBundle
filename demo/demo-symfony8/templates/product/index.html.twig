{% extends 'base.html.twig' %}

{% block title %}Products - {{ connection|upper }}{% endblock %}

{% block body %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>name</strong> - Name faker</li>
        <li><strong>description</strong> - Name faker</li>
        <li><strong>price</strong> - Age faker (numeric range: 10-999)</li>
        <li><strong>imageUrl</strong> - URL faker</li>
        <li><strong>createdAt</strong> - Date faker (past dates)</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Products <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('product_new', {connection: connection}) }}" class="btn btn-primary">Create New Product</a>
    </div>
    <div class="card-body">
        {% if products|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Created At</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>${{ product.price }}</td>
                                <td><span class="badge bg-secondary">{{ product.status }}</span></td>
                                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '-' }}</td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if product.anonymized|default(false) %}
                                        <span class="badge bg-success">✓ Yes</span>
                                    {% else %}
                                        <span class="badge bg-secondary">✗ No</span>
                                    {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('product_show', {connection: connection, id: product.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('product_edit', {connection: connection, id: product.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('product_delete', {connection: connection, id: product.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No products found. <a href="{{ path('product_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
