{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Orders', connection: connection, routePrefix: 'order', currentPage: 'Show'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Order Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('order_edit', {connection: connection, id: order.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('order_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ order.id }}</dd>

            <dt class="col-sm-3">Order Number</dt>
            <dd class="col-sm-9">{{ order.orderNumber ?? '-' }}</dd>

            <dt class="col-sm-3">Shipping Address</dt>
            <dd class="col-sm-9">{{ order.shippingAddress }}</dd>

            <dt class="col-sm-3">Billing Address</dt>
            <dd class="col-sm-9">{{ order.billingAddress ?? '-' }}</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">${{ order.totalAmount }}</dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ order.status }}</span></dd>

            <dt class="col-sm-3">Customer Email</dt>
            <dd class="col-sm-9">{{ order.customerEmail ?? '-' }}</dd>

            {% if order.type %}
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">{{ order.type.name ?? '-' }}</dd>
            {% endif %}

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if order.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: order.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>
    </div>
</div>
{% endblock %}
