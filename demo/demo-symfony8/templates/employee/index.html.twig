{% extends 'base.html.twig' %}

{% block title %}Employees - {{ connection|upper }}{% endblock %}

{% block body %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" style="background: #fff3cd; border: 1px solid #ffc107; color: #856404; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code style="background: #f8f9fa; padding: 5px 10px; border-radius: 3px; display: inline-block; margin-top: 10px;">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" style="background: #d1ecf1; border: 1px solid #bee5eb; color: #0c5460; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul style="margin: 10px 0 0 20px;">
        <li><strong>firstName</strong> - Name faker</li>
        <li><strong>lastName</strong> - Surname faker</li>
        <li><strong>username</strong> - Username faker</li>
        <li><strong>email</strong> - Email faker</li>
        <li><strong>phone</strong> - Phone faker</li>
        <li><strong>birthDate</strong> - Date faker (past dates, age 18-65)</li>
        <li><strong>age</strong> - Age faker (numeric range: 22-65)</li>
        <li><strong>previousCompany</strong> - Company faker (LLC type)</li>
        <li><strong>hireDate</strong> - Date faker (past dates)</li>
    </ul>
    <strong>Note:</strong> This entity uses exclusion patterns (department='HR' will not be anonymized).
</div>

<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Employees <span class="connection-badge {{ connection }}">{{ connection }}</span></h2>
        <a href="{{ path('employee_new', {connection: connection}) }}" class="btn btn-primary">Create New Employee</a>
    </div>

    {% if employees|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for employee in employees %}
                    <tr>
                        <td>{{ employee.id }}</td>
                        <td>{{ employee.firstName }} {{ employee.lastName }}</td>
                        <td>{{ employee.username }}</td>
                        <td>{{ employee.email }}</td>
                        <td>{{ employee.department }}</td>
                        <td>{{ employee.age }}</td>
                        <td>
                            <a href="{{ path('employee_show', {connection: connection, id: employee.id}) }}" class="btn btn-secondary" style="padding: 5px 10px; font-size: 12px;">Show</a>
                            <a href="{{ path('employee_edit', {connection: connection, id: employee.id}) }}" class="btn btn-primary" style="padding: 5px 10px; font-size: 12px;">Edit</a>
                            <form method="post" action="{{ path('employee_delete', {connection: connection, id: employee.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
                                <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 12px;" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No employees found. <a href="{{ path('employee_new', {connection: connection}) }}">Create the first one</a>.</p>
    {% endif %}
</div>
{% endblock %}
