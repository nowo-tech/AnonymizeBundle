{% extends 'base.html.twig' %}

{% block title %}Invoices - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Invoices', connection: connection, routePrefix: 'invoice', currentPage: 'List'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>invoiceNumber</strong> - Service faker (CustomReferenceFaker)</li>
        <li><strong>companyName</strong> - Company faker (corporation type)</li>
        <li><strong>companyAddress</strong> - Address faker (full format)</li>
        <li><strong>bankAccount</strong> - IBAN faker (ES country)</li>
        <li><strong>creditCard</strong> - Masking faker (preserve start/end)</li>
        <li><strong>amount</strong> - Age faker (numeric range: 100-10000)</li>
        <li><strong>issueDate</strong> - Date faker (past dates)</li>
        <li><strong>dueDate</strong> - Date faker (future dates)</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Invoices <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('invoice_new', {connection: connection}) }}" class="btn btn-primary">Create New Invoice</a>
    </div>
    <div class="card-body">
        {% if invoices|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Invoice Number</th>
                            <th>Company Name</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Issue Date</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td>{{ invoice.id }}</td>
                                <td>{{ invoice.invoiceNumber }}</td>
                                <td>{{ invoice.companyName }}</td>
                                <td>${{ invoice.amount }}</td>
                                <td><span class="badge bg-secondary">{{ invoice.status }}</span></td>
                                <td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d') : 'N/A' }}</td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if invoice.anonymized|default(false) %}
                                    {% include \'_anonymized_badge.html.twig\' with {value: invoice.anonymized|default(false)} %}
                                {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('invoice_show', {connection: connection, id: invoice.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('invoice_edit', {connection: connection, id: invoice.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('invoice_delete', {connection: connection, id: invoice.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No invoices found. <a href="{{ path('invoice_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
