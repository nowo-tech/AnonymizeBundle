{% extends 'base.html.twig' %}

{% block title %}Invoice #{{ invoice.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Invoices', connection: connection, routePrefix: 'invoice', currentPage: 'Show'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Invoice Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('invoice_edit', {connection: connection, id: invoice.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('invoice_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ invoice.id }}</dd>

            <dt class="col-sm-3">Invoice Number</dt>
            <dd class="col-sm-9">{{ invoice.invoiceNumber }}</dd>

            <dt class="col-sm-3">Company Name</dt>
            <dd class="col-sm-9">{{ invoice.companyName }}</dd>

            <dt class="col-sm-3">Company Address</dt>
            <dd class="col-sm-9">{{ invoice.companyAddress }}</dd>

            <dt class="col-sm-3">Bank Account</dt>
            <dd class="col-sm-9">{{ invoice.bankAccount ?? '-' }}</dd>

            <dt class="col-sm-3">Credit Card</dt>
            <dd class="col-sm-9">{{ invoice.creditCard ?? '-' }}</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">${{ invoice.amount }}</dd>

            <dt class="col-sm-3">Issue Date</dt>
            <dd class="col-sm-9">{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ invoice.status }}</span></dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if invoice.anonymized|default(false) %}
                                    {% include \'_anonymized_badge.html.twig\' with {value: invoice.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>
    </div>
</div>
{% endblock %}
