{% extends 'base.html.twig' %}

{% block title %}Customer #{{ customer.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Customers', connection: connection, routePrefix: 'customer', currentPage: 'Show'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Customer Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('customer_edit', {connection: connection, id: customer.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('customer_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ customer.id }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ customer.email }}</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">{{ customer.name }}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ customer.status }}</span></dd>

            <dt class="col-sm-3">Reference Code</dt>
            <dd class="col-sm-9">{{ customer.referenceCode ?? '-' }}</dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if customer.anonymized|default(false) %}
                                    {% include \'_anonymized_badge.html.twig\' with {value: customer.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>
    </div>
</div>
{% endblock %}
