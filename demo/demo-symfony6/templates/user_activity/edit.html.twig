{% extends 'base.html.twig' %}

{% block title %}Edit User Activity #{{ activity._id }} - MongoDB{% endblock %}

{% block body %}
<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="mb-0">Edit User Activity <span class="badge bg-success connection-badge">MongoDB</span></h2>
    </div>
    <div class="card-body">
        <form method="post" action="{{ path('mongodb_user_activity_edit', {id: activity._id}) }}">
            <div class="mb-3">
                <label for="userEmail" class="form-label">User Email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="userEmail" name="userEmail" value="{{ activity.userEmail ?? '' }}" required>
            </div>

            <div class="mb-3">
                <label for="userName" class="form-label">User Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="userName" name="userName" value="{{ activity.userName ?? '' }}" required>
            </div>

            <div class="mb-3">
                <label for="ipAddress" class="form-label">IP Address <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="ipAddress" name="ipAddress" value="{{ activity.ipAddress ?? '' }}" required>
            </div>

            <div class="mb-3">
                <label for="action" class="form-label">Action <span class="text-danger">*</span></label>
                <select class="form-select" id="action" name="action" required>
                    <option value="">Select an action</option>
                    <option value="login" {% if activity.action == 'login' %}selected{% endif %}>Login</option>
                    <option value="logout" {% if activity.action == 'logout' %}selected{% endif %}>Logout</option>
                    <option value="view_page" {% if activity.action == 'view_page' %}selected{% endif %}>View Page</option>
                    <option value="update_profile" {% if activity.action == 'update_profile' %}selected{% endif %}>Update Profile</option>
                    <option value="create_order" {% if activity.action == 'create_order' %}selected{% endif %}>Create Order</option>
                    <option value="cancel_order" {% if activity.action == 'cancel_order' %}selected{% endif %}>Cancel Order</option>
                    <option value="add_to_cart" {% if activity.action == 'add_to_cart' %}selected{% endif %}>Add to Cart</option>
                    <option value="remove_from_cart" {% if activity.action == 'remove_from_cart' %}selected{% endif %}>Remove from Cart</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="timestamp" class="form-label">Timestamp <span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" id="timestamp" name="timestamp" 
                       value="{% if activity.timestamp %}{{ activity.timestamp.toDateTime()|date("Y-m-d\\TH:i") }}{% else %}{{ "now"|date("Y-m-d\\TH:i") }}{% endif %}" 
                       required>
            </div>

            <div class="mb-3">
                <label for="userAgent" class="form-label">User Agent</label>
                <input type="text" class="form-control" id="userAgent" name="userAgent" value="{{ activity.metadata.userAgent ?? '' }}">
            </div>

            <div class="mb-3">
                <label for="sessionId" class="form-label">Session ID</label>
                <input type="text" class="form-control" id="sessionId" name="sessionId" value="{{ activity.metadata.sessionId ?? '' }}">
            </div>

            <div class="mb-3">
                <label for="referrer" class="form-label">Referrer</label>
                <input type="url" class="form-control" id="referrer" name="referrer" value="{{ activity.metadata.referrer ?? '' }}">
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update Activity</button>
                <a href="{{ path('mongodb_user_activity_show', {id: activity._id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
