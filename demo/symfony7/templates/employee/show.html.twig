{% extends 'base.html.twig' %}

{% block title %}Employee #{{ employee.id }} - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Employees', connection: connection, routePrefix: 'employee', currentPage: 'Show'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Employee Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('employee_edit', {connection: connection, id: employee.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('employee_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ employee.id }}</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">{{ employee.firstName }}</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">{{ employee.lastName }}</dd>

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">{{ employee.username }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ employee.email }}</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">{{ employee.phone ?? '-' }}</dd>

            <dt class="col-sm-3">Birth Date</dt>
            <dd class="col-sm-9">{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '-' }}</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">{{ employee.age }}</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ employee.department }}</span></dd>

            <dt class="col-sm-3">Previous Company</dt>
            <dd class="col-sm-9">{{ employee.previousCompany ?? '-' }}</dd>

            <dt class="col-sm-3">Hire Date</dt>
            <dd class="col-sm-9">{{ employee.hireDate ? employee.hireDate|date('Y-m-d H:i:s') : '-' }}</dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if employee.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: employee.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>
    </div>
</div>
{% endblock %}
