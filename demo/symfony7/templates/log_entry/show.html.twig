{% extends 'base.html.twig' %}

{% block title %}Log Entry Details - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Log Entries', connection: connection, routePrefix: 'log_entry', currentPage: 'Show'} %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Log Entry Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('log_entry_edit', {connection: connection, id: log_entry.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('log_entry_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ log_entry.id }}</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">{{ log_entry.message }}</dd>

            <dt class="col-sm-3">IP Address</dt>
            <dd class="col-sm-9"><code>{{ log_entry.ipAddress }}</code></dd>

            <dt class="col-sm-3">Logged At</dt>
            <dd class="col-sm-9">{{ log_entry.loggedAt ? log_entry.loggedAt|date('Y-m-d H:i:s') : '-' }}</dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if log_entry.anonymized|default(false) %}
                {% include '_anonymized_badge.html.twig' with {value: log_entry.anonymized|default(false)} %}
                {% endif %}
            </dd>
            {% endif %}
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('log_entry_delete', {connection: connection, id: log_entry.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this log entry?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ log_entry.id) }}">
                <button type="submit" class="btn btn-danger">Delete Log Entry</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
