{% extends 'base.html.twig' %}

{% block title %}Analytics Event Details - MongoDB{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Analytics Events', isMongo: true, routePrefix: 'mongodb_analytics_event', currentPage: 'Show'} %}
<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    This MongoDB document demonstrates structured data fakers: json, text, enum, country, language, hash_preserve, shuffle, constant.
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Analytics Event Details <span class="badge bg-info connection-badge">MongoDB</span></h2>
        <div class="btn-group">
            <a href="{{ path('mongodb_analytics_event_edit', {id: event._id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('mongodb_analytics_event_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9"><code>{{ event._id }}</code></dd>

            <dt class="col-sm-3">Event ID (UUID)</dt>
            <dd class="col-sm-9"><code>{{ event.eventId }}</code></dd>

            <dt class="col-sm-3">Event Type</dt>
            <dd class="col-sm-9"><span class="badge bg-{{ event.eventType == 'purchase' ? 'success' : (event.eventType == 'click' ? 'info' : 'primary') }}">{{ event.eventType }}</span></dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">{{ event.country }}</dd>

            <dt class="col-sm-3">Language</dt>
            <dd class="col-sm-9">{{ event.language }}</dd>

            <dt class="col-sm-3">Event Data (JSON)</dt>
            <dd class="col-sm-9"><pre class="small">{{ event.eventData|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre></dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">{{ event.description ?? '-' }}</dd>

            <dt class="col-sm-3">User ID Hash</dt>
            <dd class="col-sm-9"><code class="small">{{ event.userIdHash ?? '-' }}</code></dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ event.category ?? '-' }}</span></dd>

            <dt class="col-sm-3">Data Classification</dt>
            <dd class="col-sm-9"><span class="badge bg-warning">{{ event.dataClassification ?? '-' }}</span></dd>

            <dt class="col-sm-3">Timestamp</dt>
            <dd class="col-sm-9">{{ event.timestamp ? event.timestamp.toDateTime()|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if event.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: event.anonymized|default(false)} %}
                                {% endif %}
            </dd>
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('mongodb_analytics_event_delete', {id: event._id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event._id) }}">
                <button type="submit" class="btn btn-danger">Delete Event</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
