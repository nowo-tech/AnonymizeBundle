{% extends 'base.html.twig' %}

{% block title %}Edit Analytics Event - MongoDB{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Analytics Events', isMongo: true, routePrefix: 'mongodb_analytics_event', currentPage: 'Edit'} %}
<div class="mb-3">
    <a href="{{ path('mongodb_analytics_event_index') }}" class="btn btn-outline-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Back to List
    </a>
</div>
<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="mb-0">Edit Analytics Event <span class="badge bg-info connection-badge">MongoDB</span></h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="eventId" class="form-label">Event ID (UUID)</label>
                    <input type="text" class="form-control" id="eventId" name="eventId" value="{{ event.eventId ?? '' }}">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="eventType" class="form-label">Event Type *</label>
                    <select class="form-select" id="eventType" name="eventType" required>
                        <option value="page_view" {{ event.eventType == 'page_view' ? 'selected' : '' }}>Page View</option>
                        <option value="click" {{ event.eventType == 'click' ? 'selected' : '' }}>Click</option>
                        <option value="purchase" {{ event.eventType == 'purchase' ? 'selected' : '' }}>Purchase</option>
                        <option value="signup" {{ event.eventType == 'signup' ? 'selected' : '' }}>Signup</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="country" class="form-label">Country Code</label>
                    <input type="text" class="form-control" id="country" name="country" maxlength="2" value="{{ event.country ?? '' }}">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="language" class="form-label">Language Code</label>
                    <input type="text" class="form-control" id="language" name="language" maxlength="5" value="{{ event.language ?? '' }}">
                </div>
            </div>
            <div class="mb-3">
                <label for="eventData" class="form-label">Event Data (JSON)</label>
                <textarea class="form-control" id="eventData" name="eventData" rows="3">{{ event.eventData ?? '{}' }}</textarea>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3">{{ event.description ?? '' }}</textarea>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="userIdHash" class="form-label">User ID Hash</label>
                    <input type="text" class="form-control" id="userIdHash" name="userIdHash" value="{{ event.userIdHash ?? '' }}">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">-- Select --</option>
                        <option value="pending" {{ event.category == 'pending' ? 'selected' : '' }}>Pending</option>
                        <option value="processing" {{ event.category == 'processing' ? 'selected' : '' }}>Processing</option>
                        <option value="completed" {{ event.category == 'completed' ? 'selected' : '' }}>Completed</option>
                        <option value="failed" {{ event.category == 'failed' ? 'selected' : '' }}>Failed</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="dataClassification" class="form-label">Data Classification</label>
                    <input type="text" class="form-control" id="dataClassification" name="dataClassification" value="{{ event.dataClassification ?? 'ANONYMIZED' }}">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="timestamp" class="form-label">Timestamp</label>
                    <input type="datetime-local" class="form-control" id="timestamp" name="timestamp" value="{{ event.timestamp ? event.timestamp.toDateTime()|date('Y-m-d\\TH:i') : '' }}">
                </div>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="{{ path('mongodb_analytics_event_index') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
