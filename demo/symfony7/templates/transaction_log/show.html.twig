{% extends 'base.html.twig' %}

{% block title %}Transaction Log Details - MongoDB{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Transaction Logs', isMongo: true, routePrefix: 'mongodb_transaction_log', currentPage: 'Show'} %}
<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    This MongoDB document demonstrates financial fakers: email, iban, credit_card, masking, numeric, hash.
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Transaction Log Details <span class="badge bg-info connection-badge">MongoDB</span></h2>
        <div class="btn-group">
            <a href="{{ path('mongodb_transaction_log_edit', {id: transaction._id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('mongodb_transaction_log_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9"><code>{{ transaction._id }}</code></dd>

            <dt class="col-sm-3">Transaction ID</dt>
            <dd class="col-sm-9"><code>{{ transaction.transactionId }}</code></dd>

            <dt class="col-sm-3">Customer Email</dt>
            <dd class="col-sm-9">{{ transaction.customerEmail }}</dd>

            <dt class="col-sm-3">IBAN</dt>
            <dd class="col-sm-9"><code>{{ transaction.iban ?? '-' }}</code></dd>

            <dt class="col-sm-3">Credit Card</dt>
            <dd class="col-sm-9"><code class="small">{{ transaction.creditCard ?? '-' }}</code></dd>

            <dt class="col-sm-3">Masked Card</dt>
            <dd class="col-sm-9"><code>{{ transaction.maskedCard ?? '-' }}</code></dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9"><strong>{{ transaction.amount|number_format(2, '.', ',') }} {{ transaction.currency }}</strong></dd>

            <dt class="col-sm-3">Transaction Hash</dt>
            <dd class="col-sm-9"><code class="small">{{ transaction.transactionHash ?? '-' }}</code></dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-{{ transaction.status == 'completed' ? 'success' : (transaction.status == 'failed' ? 'danger' : (transaction.status == 'refunded' ? 'warning' : 'info')) }}">{{ transaction.status }}</span></dd>

            <dt class="col-sm-3">Transaction Date</dt>
            <dd class="col-sm-9">{{ transaction.transactionDate ? transaction.transactionDate.toDateTime()|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if transaction.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: transaction.anonymized|default(false)} %}
                                {% endif %}
            </dd>
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('mongodb_transaction_log_delete', {id: transaction._id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this transaction?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction._id) }}">
                <button type="submit" class="btn btn-danger">Delete Transaction</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
