{% extends 'base.html.twig' %}

{% block title %}Cache Data Details - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Cache Data', connection: connection, routePrefix: 'cache_data', currentPage: 'Show'} %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Cache Data Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('cache_data_edit', {connection: connection, id: cache_data.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('cache_data_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ cache_data.id }}</dd>

            <dt class="col-sm-3">Cache Key</dt>
            <dd class="col-sm-9"><code>{{ cache_data.cacheKey }}</code></dd>

            <dt class="col-sm-3">Cache Value</dt>
            <dd class="col-sm-9">
                <pre class="bg-light p-3 rounded" style="max-height: 300px; overflow-y: auto;">{{ cache_data.cacheValue|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
            </dd>

            <dt class="col-sm-3">Expires At</dt>
            <dd class="col-sm-9">{{ cache_data.expiresAt ? cache_data.expiresAt|date('Y-m-d H:i:s') : '-' }}</dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if cache_data.anonymized|default(false) %}
                {% include '_anonymized_badge.html.twig' with {value: cache_data.anonymized|default(false)} %}
                {% endif %}
            </dd>
            {% endif %}
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('cache_data_delete', {connection: connection, id: cache_data.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this cache data?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cache_data.id) }}">
                <button type="submit" class="btn btn-danger">Delete Cache Data</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
