{% extends 'base.html.twig' %}

{% block title %}Orders - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Orders', connection: connection, routePrefix: 'order', currentPage: 'List'} %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>orderNumber</strong> - Service faker (CustomReferenceFaker)</li>
        <li><strong>shippingAddress</strong> - Address faker (full format)</li>
        <li><strong>billingAddress</strong> - Address faker (full format)</li>
        <li><strong>totalAmount</strong> - Age faker (numeric range: 50-5000)</li>
        <li><strong>orderDate</strong> - Date faker (past dates)</li>
        <li><strong>customerEmail</strong> - Email faker</li>
    </ul>
    <strong class="mt-2 d-block">Note:</strong> This entity uses inclusion patterns (status='completed') and exclusion patterns (id<=5).
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Orders <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('order_new', {connection: connection}) }}" class="btn btn-primary">Create New Order</a>
    </div>
    <div class="card-body">
        {% if orders|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Order Number</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.orderNumber ?? 'N/A' }}</td>
                                <td>${{ order.totalAmount }}</td>
                                <td><span class="badge bg-secondary">{{ order.status }}</span></td>
                                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : 'N/A' }}</td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if order.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: order.anonymized|default(false)} %}
                                {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('order_show', {connection: connection, id: order.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('order_edit', {connection: connection, id: order.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('order_delete', {connection: connection, id: order.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No orders found. <a href="{{ path('order_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
