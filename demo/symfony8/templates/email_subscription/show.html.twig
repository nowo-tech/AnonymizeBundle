{% extends 'base.html.twig' %}

{% block title %}Email Subscription Details - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Email Subscriptions', connection: connection, routePrefix: 'email_subscription', currentPage: 'Show'} %}
<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>email</strong> - Email faker (pattern: %@test-domain.com|%@example.com|%@demo.local)</li>
        <li><strong>name</strong> - Name faker</li>
        <li><strong>backupEmail</strong> - Email faker (pattern: status inactive|unsubscribed)</li>
        <li><strong>subscribedAt</strong> - Date faker (past dates)</li>
        <li><strong>unsubscribedAt</strong> - Date faker (pattern: status unsubscribed)</li>
        <li><strong>notes</strong> - Text faker (pattern: status inactive|unsubscribed)</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Email Subscription Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('email_subscription_edit', {connection: connection, id: subscription.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('email_subscription_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ subscription.id }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ subscription.email }}</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">{{ subscription.name }}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-{{ subscription.status == 'active' ? 'success' : (subscription.status == 'inactive' ? 'warning' : 'secondary') }}">{{ subscription.status }}</span></dd>

            <dt class="col-sm-3">Backup Email</dt>
            <dd class="col-sm-9">{{ subscription.backupEmail ?? '-' }}</dd>

            <dt class="col-sm-3">Source</dt>
            <dd class="col-sm-9">{{ subscription.source }}</dd>

            <dt class="col-sm-3">Subscribed At</dt>
            <dd class="col-sm-9">{{ subscription.subscribedAt ? subscription.subscribedAt|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Unsubscribed At</dt>
            <dd class="col-sm-9">{{ subscription.unsubscribedAt ? subscription.unsubscribedAt|date('Y-m-d H:i:s') : '-' }}</dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">{{ subscription.notes ?? '-' }}</dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if subscription.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: subscription.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('email_subscription_delete', {connection: connection, id: subscription.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this subscription?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subscription.id) }}">
                <button type="submit" class="btn btn-danger">Delete Subscription</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
