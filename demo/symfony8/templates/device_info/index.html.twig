{% extends 'base.html.twig' %}

{% block title %}Device Infos - MongoDB{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Device Infos', isMongo: true, routePrefix: 'mongodb_device_info', currentPage: 'List'} %}
{% if error|default(false) %}
<div class="alert alert-danger" role="alert">
    <strong>⚠️ Error:</strong> {{ error }}
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    This MongoDB document demonstrates technical fakers:
    <ul class="mb-0 mt-2">
        <li><strong>deviceId</strong> - UUID faker</li>
        <li><strong>ipAddress</strong> - IP address faker</li>
        <li><strong>macAddress</strong> - MAC address faker</li>
        <li><strong>deviceHash</strong> - Hash faker</li>
        <li><strong>location</strong> - Coordinate faker</li>
        <li><strong>themeColor</strong> - Color faker</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Device Infos <span class="badge bg-info connection-badge">MongoDB</span></h2>
        <a href="{{ path('mongodb_device_info_new') }}" class="btn btn-primary">Create New</a>
    </div>
    <div class="card-body">
        {% if devices|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Device ID</th>
                            <th>Device Name</th>
                            <th>IP Address</th>
                            <th>MAC Address</th>
                            <th>Is Active</th>
                            <th>Last Seen</th>
                            <th>Anonymized</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for device in devices %}
                        <tr>
                            <td><code class="small">{{ device._id|slice(0, 8) }}...</code></td>
                            <td><code class="small">{{ device.deviceId|slice(0, 8) }}...</code></td>
                            <td>{{ device.deviceName ?? '-' }}</td>
                            <td>{{ device.ipAddress }}</td>
                            <td><code>{{ device.macAddress }}</code></td>
                            <td>
                                {% if device.isActive|default(false) %}
                                    <span class="badge bg-success">Yes</span>
                                {% else %}
                                    <span class="badge bg-secondary">No</span>
                                {% endif %}
                            </td>
                            <td>{{ device.lastSeen ? device.lastSeen.toDateTime()|date('Y-m-d H:i') : '-' }}</td>
                            <td>
                                {% if device.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: device.anonymized|default(false)} %}
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('mongodb_device_info_show', {id: device._id}) }}" class="btn btn-sm btn-outline-primary">Show</a>
                                    <a href="{{ path('mongodb_device_info_edit', {id: device._id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <form method="post" action="{{ path('mongodb_device_info_delete', {id: device._id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ device._id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No device infos found.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
