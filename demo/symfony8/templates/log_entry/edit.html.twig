{% extends 'base.html.twig' %}

{% block title %}Edit Log Entry - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Log Entries', connection: connection, routePrefix: 'log_entry', currentPage: 'Edit'} %}

<div class="mb-3">
    <a href="{{ path('log_entry_index', {connection: connection}) }}" class="btn btn-outline-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Back to List
    </a>
</div>
<div class="card shadow-sm">
    <div class="card-header">
        <h2 class="mb-0">Edit Log Entry <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_row(form.message, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.ipAddress, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.loggedAt, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Update Log Entry</button>
                <a href="{{ path('log_entry_show', {connection: connection, id: log_entry.id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
