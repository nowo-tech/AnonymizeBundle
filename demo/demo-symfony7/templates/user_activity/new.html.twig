{% extends 'base.html.twig' %}

{% block title %}New User Activity - MongoDB{% endblock %}

{% block body %}
<div class="card">
    <h2>Create New User Activity <span class="connection-badge mongodb" style="background: #10b981; color: white; padding: 5px 15px; border-radius: 5px; font-size: 14px; font-weight: normal;">MongoDB</span></h2>

    <form method="post" action="{{ path('mongodb_user_activity_new') }}">
        <div style="margin-bottom: 15px;">
            <label for="userEmail" style="display: block; margin-bottom: 5px; font-weight: bold;">User Email:</label>
            <input type="email" id="userEmail" name="userEmail" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="userName" style="display: block; margin-bottom: 5px; font-weight: bold;">User Name:</label>
            <input type="text" id="userName" name="userName" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="ipAddress" style="display: block; margin-bottom: 5px; font-weight: bold;">IP Address:</label>
            <input type="text" id="ipAddress" name="ipAddress" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="action" style="display: block; margin-bottom: 5px; font-weight: bold;">Action:</label>
            <select id="action" name="action" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                <option value="">Select an action</option>
                <option value="login">Login</option>
                <option value="logout">Logout</option>
                <option value="view_page">View Page</option>
                <option value="update_profile">Update Profile</option>
                <option value="create_order">Create Order</option>
                <option value="cancel_order">Cancel Order</option>
                <option value="add_to_cart">Add to Cart</option>
                <option value="remove_from_cart">Remove from Cart</option>
            </select>
        </div>

        <div style="margin-bottom: 15px;">
            <label for="timestamp" style="display: block; margin-bottom: 5px; font-weight: bold;">Timestamp:</label>
            <input type="datetime-local" id="timestamp" name="timestamp" value="{{ "now"|date("Y-m-d\\TH:i") }}" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="userAgent" style="display: block; margin-bottom: 5px; font-weight: bold;">User Agent:</label>
            <input type="text" id="userAgent" name="userAgent" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="sessionId" style="display: block; margin-bottom: 5px; font-weight: bold;">Session ID:</label>
            <input type="text" id="sessionId" name="sessionId" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 15px;">
            <label for="referrer" style="display: block; margin-bottom: 5px; font-weight: bold;">Referrer:</label>
            <input type="url" id="referrer" name="referrer" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Create Activity</button>
            <a href="{{ path('mongodb_user_activity_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
{% endblock %}
