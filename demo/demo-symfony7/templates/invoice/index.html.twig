{% extends 'base.html.twig' %}

{% block title %}Invoices - {{ connection|upper }}{% endblock %}

{% block body %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" style="background: #fff3cd; border: 1px solid #ffc107; color: #856404; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code style="background: #f8f9fa; padding: 5px 10px; border-radius: 3px; display: inline-block; margin-top: 10px;">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" style="background: #d1ecf1; border: 1px solid #bee5eb; color: #0c5460; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul style="margin: 10px 0 0 20px;">
        <li><strong>invoiceNumber</strong> - Service faker (CustomReferenceFaker)</li>
        <li><strong>companyName</strong> - Company faker (corporation type)</li>
        <li><strong>companyAddress</strong> - Address faker (full format)</li>
        <li><strong>bankAccount</strong> - IBAN faker (ES country)</li>
        <li><strong>creditCard</strong> - Masking faker (preserve start/end)</li>
        <li><strong>amount</strong> - Age faker (numeric range: 100-10000)</li>
        <li><strong>issueDate</strong> - Date faker (past dates)</li>
        <li><strong>dueDate</strong> - Date faker (future dates)</li>
    </ul>
</div>

<div class="card">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Invoices <span class="connection-badge {{ connection }}">{{ connection }}</span></h2>
        <a href="{{ path('invoice_new', {connection: connection}) }}" class="btn btn-primary">Create New Invoice</a>
    </div>

    {% if invoices|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Invoice Number</th>
                    <th>Company Name</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Issue Date</th>
                    {% if hasAnonymizedColumn|default(false) %}
                    <th>Anonymized</th>
                    {% endif %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.id }}</td>
                        <td>{{ invoice.invoiceNumber }}</td>
                        <td>{{ invoice.companyName }}</td>
                        <td>${{ invoice.amount }}</td>
                        <td>{{ invoice.status }}</td>
                        <td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d') : 'N/A' }}</td>
                        {% if hasAnonymizedColumn|default(false) %}
                        <td>
                            {% if invoice.anonymized|default(false) %}
                                <span style="color: #28a745; font-weight: bold;">✓ Yes</span>
                            {% else %}
                                <span style="color: #6c757d;">✗ No</span>
                            {% endif %}
                        </td>
                        {% endif %}
                        <td>
                            <a href="{{ path('invoice_show', {connection: connection, id: invoice.id}) }}" class="btn btn-secondary" style="padding: 5px 10px; font-size: 12px;">Show</a>
                            <a href="{{ path('invoice_edit', {connection: connection, id: invoice.id}) }}" class="btn btn-primary" style="padding: 5px 10px; font-size: 12px;">Edit</a>
                            <form method="post" action="{{ path('invoice_delete', {connection: connection, id: invoice.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                                <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 12px;" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No invoices found. <a href="{{ path('invoice_new', {connection: connection}) }}">Create the first one</a>.</p>
    {% endif %}
</div>
{% endblock %}
