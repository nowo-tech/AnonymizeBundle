<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Anonymize Bundle Demo{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 56px;
        }
        aside {
            position: fixed;
            top: 56px;
            left: 0;
            width: 280px;
            height: calc(100vh - 56px);
            background: white;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            z-index: 1030;
            overflow-y: auto;
            padding: 0;
        }
        .sidebar-nav {
            padding: 20px 0;
        }
        .sidebar-nav .nav-link {
            padding: 10px 20px 10px 35px;
            border-left: 3px solid transparent;
            transition: all 0.3s;
            color: #333;
            text-decoration: none;
            display: block;
        }
        .sidebar-nav .nav-link:hover {
            background: #f8f9fa;
            border-left-color: #667eea;
            color: #667eea;
        }
        .sidebar-nav .nav-link.active {
            background: #f0f4ff;
            border-left-color: #667eea;
            color: #667eea;
            font-weight: 600;
        }
        .sidebar-nav .nav-section {
            padding: 15px 20px 8px;
            color: #667eea;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }
        .connection-badge {
            font-size: 0.75rem;
        }
        main {
            margin-left: 280px;
            padding-left: 20px;
            padding-right: 20px;
            transition: margin-left 0.3s;
        }
        /* Mobile: Sidebar oculto, se abre con botón */
        @media (max-width: 767px) {
            aside {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            aside.show {
                transform: translateX(0);
            }
            main {
                margin-left: 0;
                padding-left: 15px;
                padding-right: 15px;
            }
            .sidebar-overlay {
                position: fixed;
                top: 56px;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.5);
                z-index: 1029;
                opacity: 0;
                visibility: hidden;
                transition: opacity 0.3s, visibility 0.3s;
            }
            .sidebar-overlay.show {
                opacity: 1;
                visibility: visible;
            }
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;">
        <div class="container-fluid">
            <button class="btn btn-link text-white d-md-none" type="button" id="sidebarToggle" aria-label="Toggle menu">
                ☰
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">Anonymize Bundle Demo - CRUD</a>
        </div>
    </nav>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <aside id="sidebar">
        <nav class="sidebar-nav">
            <ul class="list-unstyled mb-0">
                <li><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                <li><div class="nav-section">Users</div></li>
                <li><a class="nav-link" href="{{ path('user_index', {connection: 'default'}) }}">Users (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('user_index', {connection: 'postgres'}) }}">Users (PostgreSQL)</a></li>
                <li><div class="nav-section">Customers</div></li>
                <li><a class="nav-link" href="{{ path('customer_index', {connection: 'default'}) }}">Customers (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('customer_index', {connection: 'postgres'}) }}">Customers (PostgreSQL)</a></li>
                <li><div class="nav-section">Products</div></li>
                <li><a class="nav-link" href="{{ path('product_index', {connection: 'default'}) }}">Products (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('product_index', {connection: 'postgres'}) }}">Products (PostgreSQL)</a></li>
                <li><div class="nav-section">Orders</div></li>
                <li><a class="nav-link" href="{{ path('order_index', {connection: 'default'}) }}">Orders (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('order_index', {connection: 'postgres'}) }}">Orders (PostgreSQL)</a></li>
                <li><div class="nav-section">Invoices</div></li>
                <li><a class="nav-link" href="{{ path('invoice_index', {connection: 'default'}) }}">Invoices (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('invoice_index', {connection: 'postgres'}) }}">Invoices (PostgreSQL)</a></li>
                <li><div class="nav-section">Employees</div></li>
                <li><a class="nav-link" href="{{ path('employee_index', {connection: 'default'}) }}">Employees (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('employee_index', {connection: 'postgres'}) }}">Employees (PostgreSQL)</a></li>
                <li><div class="nav-section">Email Subscriptions</div></li>
                <li><a class="nav-link" href="{{ path('email_subscription_index', {connection: 'default'}) }}">Email Subscriptions (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('email_subscription_index', {connection: 'postgres'}) }}">Email Subscriptions (PostgreSQL)</a></li>
                <li><div class="nav-section">System Logs</div></li>
                <li><a class="nav-link" href="{{ path('system_log_index', {connection: 'default'}) }}">System Logs (MySQL)</a></li>
                <li><a class="nav-link" href="{{ path('system_log_index', {connection: 'postgres'}) }}">System Logs (PostgreSQL)</a></li>
                <li><div class="nav-section">MongoDB</div></li>
                <li><a class="nav-link" href="{{ path('mongodb_user_activity_index') }}">User Activities</a></li>
                <li><a class="nav-link" href="{{ path('mongodb_customer_profile_index') }}">Customer Profiles</a></li>
                <li><a class="nav-link" href="{{ path('mongodb_transaction_log_index') }}">Transaction Logs</a></li>
                <li><a class="nav-link" href="{{ path('mongodb_device_info_index') }}">Device Infos</a></li>
                <li><a class="nav-link" href="{{ path('mongodb_analytics_event_index') }}">Analytics Events</a></li>
            </ul>
        </nav>
    </aside>

    <main class="py-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <script>
        // Mark active link
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.sidebar-nav .nav-link');
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath || currentPath.startsWith(link.getAttribute('href'))) {
                link.classList.add('active');
            }
        });

        // Sidebar toggle para mobile
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        function toggleSidebar() {
            sidebar.classList.toggle('show');
            sidebarOverlay.classList.toggle('show');
        }

        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', toggleSidebar);
        }

        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', toggleSidebar);
        }

        // Cerrar sidebar al hacer clic en un link (solo en mobile)
        if (window.innerWidth < 768) {
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    sidebar.classList.remove('show');
                    sidebarOverlay.classList.remove('show');
                });
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
