{% extends 'base.html.twig' %}

{% block title %}Users - {{ connection|upper }}{% endblock %}

{% block body %}
{% if not hasAnonymizedColumn|default(false) %}
<div class="alert alert-warning" role="alert">
    <strong>⚠️ Column "anonymized" not found</strong><br>
    To add the anonymization tracking column, run:<br>
    <code class="d-inline-block mt-2 p-2 bg-light rounded">
        php bin/console nowo:anonymize:generate-column-migration --connection {{ connection }}
    </code>
</div>
{% endif %}

<div class="alert alert-info" role="alert">
    <strong>ℹ️ Anonymized Fields</strong><br>
    The following fields in this entity are configured for anonymization:
    <ul class="mb-0 mt-2">
        <li><strong>email</strong> - Email faker</li>
        <li><strong>firstName</strong> - Name faker</li>
        <li><strong>lastName</strong> - Surname faker</li>
        <li><strong>age</strong> - Age faker (numeric range: 18-100)</li>
        <li><strong>phone</strong> - Phone faker</li>
        <li><strong>iban</strong> - IBAN faker (ES country)</li>
        <li><strong>creditCard</strong> - Credit card faker</li>
    </ul>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Users <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <a href="{{ path('user_new', {connection: connection}) }}" class="btn btn-primary">Create New User</a>
    </div>
    <div class="card-body">
        {% if users|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                            <th>Phone</th>
                            <th>Status</th>
                            {% if hasAnonymizedColumn|default(false) %}
                            <th>Anonymized</th>
                            {% endif %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.age }}</td>
                                <td>{{ user.phone ?? '-' }}</td>
                                <td><span class="badge bg-secondary">{{ user.status }}</span></td>
                                {% if hasAnonymizedColumn|default(false) %}
                                <td>
                                    {% if user.anonymized|default(false) %}
                                        <span class="badge bg-success">✓ Yes</span>
                                    {% else %}
                                        <span class="badge bg-secondary">✗ No</span>
                                    {% endif %}
                                </td>
                                {% endif %}
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('user_show', {connection: connection, id: user.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                                        <a href="{{ path('user_edit', {connection: connection, id: user.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="{{ path('user_delete', {connection: connection, id: user.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted">No users found. <a href="{{ path('user_new', {connection: connection}) }}">Create the first one</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
