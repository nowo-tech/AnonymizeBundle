{% extends 'base.html.twig' %}

{% block title %}User Details - {{ connection|upper }}{% endblock %}

{% block body %}
{% include '_breadcrumbs.html.twig' with {entityName: 'Users', connection: connection, routePrefix: 'user', currentPage: 'Show'} %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">User Details <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></h2>
        <div class="btn-group">
            <a href="{{ path('user_edit', {connection: connection, id: user.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('user_index', {connection: connection}) }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ user.id }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ user.email }}</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">{{ user.firstName }}</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">{{ user.lastName }}</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">{{ user.age }}</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">{{ user.phone ?? '-' }}</dd>

            <dt class="col-sm-3">IBAN</dt>
            <dd class="col-sm-9">{{ user.iban ?? '-' }}</dd>

            <dt class="col-sm-3">Credit Card</dt>
            <dd class="col-sm-9">{{ user.creditCard ?? '-' }}</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">{{ user.status }}</span></dd>

            {% if hasAnonymizedColumn|default(false) %}
            <dt class="col-sm-3">Anonymized</dt>
            <dd class="col-sm-9">
                {% if user.anonymized|default(false) %}
                                    {% include '_anonymized_badge.html.twig' with {value: user.anonymized|default(false)} %}
                                {% endif %}
            </dd>
            {% endif %}
        </dl>

        <div class="mt-4">
            <form method="post" action="{{ path('user_delete', {connection: connection, id: user.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button type="submit" class="btn btn-danger">Delete User</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
