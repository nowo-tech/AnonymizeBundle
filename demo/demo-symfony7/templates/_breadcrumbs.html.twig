{# Breadcrumbs component #}
{# Usage: {% include '_breadcrumbs.html.twig' with {entityName: 'Users', connection: connection, currentPage: 'List'} %} #}
{# For MongoDB: {% include '_breadcrumbs.html.twig' with {entityName: 'User Activities', isMongo: true, currentPage: 'List'} %} #}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('home') }}">Home</a>
        </li>
        {% if isMongo|default(false) %}
            <li class="breadcrumb-item">
                <a href="{{ path(routePrefix ~ '_index') }}">{{ entityName }}</a>
            </li>
        {% else %}
            <li class="breadcrumb-item">
                <a href="{{ path(routePrefix ~ '_index', {connection: connection}) }}">{{ entityName }} <span class="badge bg-{{ connection == 'default' ? 'success' : 'primary' }} connection-badge">{{ connection }}</span></a>
            </li>
        {% endif %}
        {% if currentPage is defined and currentPage != 'List' %}
            <li class="breadcrumb-item active" aria-current="page">{{ currentPage }}</li>
        {% endif %}
    </ol>
</nav>
